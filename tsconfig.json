{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "ES2015",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": false,
    "noImplicitThis": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
